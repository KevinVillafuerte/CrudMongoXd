<% include partials/_header %>
<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/editca/<%= task._id %>" method="post">
            <div class="tab-content">
              <div id="calificacion" class="container tab-pane active">
                <div class="card-header">
                  <h3 class="text-center">Datos de la calificaion Alumno</h3>
                </div>
                
                <div class="form-group">
                  <label for="">Nombre Alumno: </label>
                  <input disabled type="text" placeholder="Ingresa nombre del Alumno" name="Nombre"
                    class="form-control" value="<%= task.Nombre %>">
                </div>
                <div class="form-group">
                  <label for="">Nombre de la Asignatura: </label>
                  <input disabled type="text" placeholder="Ingresa tu nombre" name="NombreAsignatura" class="form-control"
                  value="<%= task.NombreAsignatura %>">
                </div>
                <div class="form-group">
                  <label for="">Numero Unidad: </label>
                  <input disabled type="text" placeholder="Numero Unidad" name="NumUnidad" class="form-control"
                  value="<%= task.NumUnidad %>">
                </div>
                <div class="form-group">
                  <label for="">Calificacion Ordinaria": </label>
                  <input type="number" placeholder="Calificacion Ordinaria" name="CalifOrdinaria" class="form-control"
                  value="<%= task.CalifOrdinaria %>">
                </div>
                <div class="form-group">
                  <label for="">Recuperacion Uno: </label>
                  <input type="number" placeholder="Recuperacion Uno" name="R1"
                    class="form-control" value="<%= task.R1 %>">
                </div>
                <div class="form-group">
                  <label for="">Recuperacion Dos: </label>
                  <input type="number" placeholder="Recuperacion Dos" name="R2" class="form-control"
                  value="<%= task.R2 %>">
                </div>
                <div class="form-group">
                  <label for="">Global: </label>
                  <input type="number" placeholder="Global" name="Global"
                    class="form-control" value="<%= task.Global %>">
                </div>
                
                <ul class="pagination justify-content-center" role="tablist">
                  <li class="nave-item"></li>
                  
                  <button type="submit" class="nav-link page-link">Actualizar</button>
                  </li>
                </ul>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% include partials/_footer%>