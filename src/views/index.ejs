<% include partials/_header %>
<div class="container mt-2 ">
  <section class="row">
    <main class="col-12 col-sm-12 col-md-10 col-lg-8 col-xl-8">
      <!--Borrar a partir de aqui-->
      <div class="card mb-2">
        <div class="card-body ">
          <div class="row ">
            <div class="col-12">
              <form action="/add" method="POST">
                <div class="tab-content">
                  <div id="usuario" class="container tab-pane active">
                    <div class="card-header">
                      <h3 class="text-center">Datos del Alumno</h3>
                    </div>
                    <div class="form-group">
                      <label for="">Numero de Matricula:</label>
                      <input type="text" placeholder="Ingresa tu numero de Matricula" name="matriculaAlum"
                        class="form-control">
                    </div>

                    <div class="form-group">
                      <label for="">Nombre: </label>
                      <input type="text" placeholder="Ingresa tu nombre" name="Nombre" class="form-control">
                    </div>

                    <div class="form-group">
                      <label for="">Apellido Paterno: </label>
                      <input type="text" placeholder="Apellido Paterno" name="ApePaterno" class="form-control">
                    </div>

                    <div class="form-group">
                      <label for="">Apellido Materno: </label>
                      <input type="text" placeholder="Apellido Materno" name="ApeMaterno" class="form-control">
                    </div>

                    <div class="form-group">
                      <label for="">Telefono: </label>
                      <input type="text" placeholder="Ingresa tu numero de telefono" name="telefono"
                        class="form-control">
                    </div>

                    <div class="form-group">
                      <label for="">Dirección: </label>
                      <input type="text" placeholder="Ingresa tu Dirección" name="Direccion"
                        class="form-control">
                    </div>

                    <div class="form-group">
                      <label for="">Correo electronico: </label>
                      <input type="text" placeholder="Ingresa tu correo electronico" name="Email" class="form-control">
                    </div>

                    <div class="form-group">
                      <label for="">Cuatrimestre Actual :</label>
                      <input type="number" placeholder="Cuatrimestre :" name="CuatrimestreAct" class="form-control">
                    </div>

                    <div class="form-group">
                      <label for="">Carrera: </label>
                      <select name="NombreCarrera" class="form-control">
                      <option value="">Seleccionar</option>
                      <% for(var i=0; i< tasks13.length; i++){ %>
                      <option value="<%= tasks13[i].NombreCarrera %>"><%= tasks13[i].NombreCarrera %></option>
                      <% }%>
                      </select>
                    </div>
                    
                    <ul class="pagination justify-content-center" role="tablist">
                      <li class="nave-item"></li>
                      
                      <button type="submit" class="nav-link page-link">Agregar</button>
                      </li>
                    </ul>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!--Ultima linea de borrado-->
    </main>
  </section>
</div>
<% include partials/_footer %>