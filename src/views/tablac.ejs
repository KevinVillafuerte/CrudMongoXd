<% include partials/_header %>
<div class="container mt-2 ">
  <section class="row">
    <main class="col-12 col-sm-12 col-md-10 col-lg-8 col-xl-8">
      <!--Borrar a partir de aqui-->
      <div class="card mb-2">
        <div class="card-body ">
          <div class="row ">
            <div class="col-12">
              <form action="/addc" method="POST">
                <div class="tab-content">
                  <div id="carrera" class="container tab-pane active">
                    <div class="card-header">
                      <h3 class="text-center">Datos de la Carrera</h3>
                    </div>
                    <div class="form-group">
                      <label for="">Matricula de Carrera:</label>
                      <input type="text" placeholder="Ingresa la Matricula de la Carrera" name="ClaveCarrera"
                        class="form-control">
                    </div>
                    <div class="form-group">
                      <label for="">Nombre de la Carrera: </label>
                      <input type="text" placeholder="Nombre de la Carrera" name="NombreCarrera" class="form-control">
                    </div>
                      <button type="submit" class="nav-link page-link">Agregar</button>
                      </li>
                    </ul>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!--Ultima linea de borrado-->
        <div class="col-md-7">
            <div class="table-responsive">
              <table class="table table-bordered table-dark">
                <thead>
                  <tr>
                    <th>NÂ°</th>
                    <th>Matricula de la Carrera</th>
                    <th>Nombre de la Carrera</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i < tasks.length; i++) { %>
                  <tr>
                    <td><%= i + 1%></td>
                    <td> <%= tasks[i].ClaveCarrera %> </td>
                    <td><%= tasks[i].NombreCarrera %></td>
                    <td>
                      <a href="/deletec/<%= tasks[i]._id %>" class="btn btn-danger">
                        Eliminar
                      </a>
                    </td>
                    <td>
                      <a href="/editc/<%= tasks[i]._id %>" class="btn btn-info">
                        Actualizar
                      </a>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
        </div>
    </main>
  </section>
</div>
<% include partials/_footer %>