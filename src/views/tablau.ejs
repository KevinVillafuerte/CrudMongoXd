<% include partials/_header %>
<div class="container mt-2 ">
  <section class="row">
    <main class="col-12 col-sm-12 col-md-10 col-lg-8 col-xl-8">
      <!--Borrar a partir de aqui-->
      <div class="card mb-2">
        <div class="card-body ">
          <div class="row ">
            <div class="col-12">
              <form action="/addu" method="POST">
                <div class="tab-content">
                  <div id="carrera" class="container tab-pane active">
                    <div class="card-header">
                      <h3 class="text-center">Datos de la Unidad </h3>
                    </div>
                    
                    <div class="form-group">
                      <label for="">Clave Asignatura: </label>
                      <select name="ClaveAsignatura" class="form-control">
                      <option value="">Seleccionar</option>
                      <% for(var i=0; i< tasks12.length; i++){ %>
                      <option value="<%= tasks12[i].ClaveAsignatura %>"><%= tasks12[i].NombreAsignatura %></option>
                      <% }%>
                      </select>
                  </div>

                    <div class="form-group">
                      <label for="">Numero de la unidad: </label>
                      <input type="number" placeholder="Numero de la Unidad" name="NumUnidad" class="form-control">
                    </div>
                    
                    <div class="form-group">
                        <label for="">Nombre de la Unidad: </label>
                        <input type="text" placeholder="Nombre Unidad" name="NombreUnidad" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="">Horas Unidad : </label>
                        <input type="number" placeholder="Horas Unidad" name="HorasUnidad" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="">Horas Unidad por semana : </label>
                        <input type="number" placeholder="Horas Unidad Semana" name="HorasSemana" class="form-control">
                    </div>
                      <button type="submit" class="nav-link page-link">Agregar</button>
                      </li>
                    </ul>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!--Ultima linea de borrado-->
        <div class="col-md-7">
            <div class="table-responsive">
              <table class="table table-bordered table-dark">
                <thead>
                  <tr>
                    <th>NÂ°</th>
                    <th>Clave Asignatura</th>
                    <th>Numero de Unidad</th>
                    <th>Nombre Unidad</th>
                    <th>Horas Unidad</th>
                    <th>Horas por Semana</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i < tasks.length; i++) { %>
                  <tr>
                    <td><%= i + 1%></td>
                    <td> <%= tasks[i].ClaveAsignatura %> </td>
                    <td><%= tasks[i].NumUnidad %></td>
                    <td><%= tasks[i].NombreUnidad %></td>
                    <td><%= tasks[i].HorasUnidad %></td>
                    <td><%= tasks[i].HorasSemana %></td>
                    <td>
                      <a href="/deleteu/<%= tasks[i]._id %>" class="btn btn-danger">
                        Eliminar
                      </a>
                    </td>
                    <td>
                      <a href="/editu/<%= tasks[i]._id %>" class="btn btn-info">
                        Actualizar
                      </a>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
        </div>
    </main>
  </section>
</div>
<% include partials/_footer %>