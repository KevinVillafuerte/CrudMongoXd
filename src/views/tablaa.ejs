<% include partials/_header %>
<div class="container mt-2 ">
  <section class="row">
    <main class="col-12 col-sm-12 col-md-10 col-lg-8 col-xl-8">
      <!--Borrar a partir de aqui-->
      <div class="card mb-2">
        <div class="card-body ">
          <div class="row ">
            <div class="col-12">
              <form action="/adda" method="POST">
                <div class="tab-content">
                  <div id="carrera" class="container tab-pane active">
                    <div class="card-header">
                      <h3 class="text-center">Datos de la Asignatura</h3>
                    </div>
                    <div class="form-group">
                      <label for="">Clave de la Asignatura:</label>
                      <input type="text" placeholder="Ingresa la Clave de la Asignatura" name="ClaveAsignatura"
                        class="form-control">
                    </div>
                    <div class="form-group">
                      <label for="">Nombre de la Asignatura: </label>
                      <input type="text" placeholder="Nombre de la Asignatura" name="NombreAsignatura" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="">Cuatrimestre: </label>
                        <input type="number" placeholder="Cuatrimestre" name="Cuatrimestre" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="">Carrera: </label>
                        <select name="ClaveCarrera" class="form-control">
                        <option value="">Seleccionar</option>
                        <% for(var i=0; i< tasks11.length; i++){ %>
                        <option value="<%= tasks11[i].ClaveCarrera %>"><%= tasks11[i].NombreCarrera %></option>
                        <% }%>
                        </select>
                    </div>

                    <button type="submit" class="nav-link page-link">Agregar</button>
                      </li>
                    </ul>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!--Ultima linea de borrado-->
        <div class="col-md-7">
            <div class="table-responsive">
              <table class="table table-bordered table-dark">
                <thead>
                  <tr>
                    <th>NÂ°</th>
                    <th>Clave Asignatura</th>
                    <th>Nombre de la Asignatura</th>
                    <th>Cuatrimestre</th>
                    <th>Carrera</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i < tasks.length; i++) { %>
                  <tr>
                    <td><%= i + 1%></td>
                    <td> <%= tasks[i].ClaveAsignatura %> </td>
                    <td><%= tasks[i].NombreAsignatura %></td>
                    <td><%= tasks[i].Cuatrimestre %></td>
                    <td><%= tasks[i].ClaveCarrera %></td>
                    <td>
                      <a href="/deletea/<%= tasks[i]._id %>" class="btn btn-danger">
                        Eliminar
                      </a>
                    </td>
                    <td>
                      <a href="/edita/<%= tasks[i]._id %>" class="btn btn-info">
                        Actualizar
                      </a>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
        </div>
    </main>
  </section>
</div>
<% include partials/_footer %>