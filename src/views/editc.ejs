<% include partials/_header %>
<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= task._id %>" method="post">
            <div class="tab-content">
              <div id="usuario" class="container tab-pane active">
                <div class="card-header">
                  <h3 class="text-center">Datos del usuario</h3>
                </div>
                <div class="form-group">
                  <label for="">Matricula de la Carrera: </label>
                  <input disabled type="text" placeholder="Ingresa la matricula de la Carrera" name="ClaveCarrera"
                    class="form-control" value="<%= task.ClaveCarrera %>">
                </div>
                <div class="form-group">
                  <label for="">Nombre: </label>
                  <input type="text" placeholder="Nombre de la Carrera" name="NombreCarrera" class="form-control"
                  value="<%= task.NombreCarrera %>">
                </div>
                <ul class="pagination justify-content-center" role="tablist">
                  <li class="nave-item"></li>
                  
                  <button type="submit" class="nav-link page-link">Actualizar</button>
                  </li>
                </ul>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% include partials/_footer%>